{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./", // Can be "./nodes" or "./credentials" if you prefer to keep sources separate
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "nodes/**/*.ts",
        "credentials/**/*.ts",
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}